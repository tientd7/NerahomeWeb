@model IEnumerable<NerahomeWeb.Models.Menu>

@{
    ViewBag.Title = "Hienthi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Hienthi</h2>

<p>
    @Html.ActionLink("Thêm mới", "Index")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.item_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.item_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Enable)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.item_type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.meta_desc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.meta_key)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.item_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.item_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Enable)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.item_type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.meta_desc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.meta_key)
        </td>
        <td>
             <a href="/Menu/sua?item_id=@item.item_id">Sửa</a>
           

            <a href="/Menu/xoa?item_id=@item.item_id">Xóa</a>

        </td>
    </tr>
}
    @Session["success"]
</table>
